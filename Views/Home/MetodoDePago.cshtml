@using TP8_Levin.Models;

<div class="card centrado" style="width: 22rem;">
      <img src= @ViewBag.ObtenerEnvaseid.Foto class="card-img-top" alt="...">
      <div class="card-body">
          <h5 class="card-title">@ViewBag.ObtenerEnvaseid.Nombre</h5>
          <p class="card-text">@ViewBag.ObtenerEnvaseid.Precio</p>
      </div>  
      
  <div class = "text-center">
    @foreach(Gustos g in ViewBag.ListaGustos)
    {
      <li> @g.Nombre </li>
    }  
  </div>
</div>
<br>
<br>
<div class="alert alert-dark" role="alert">
Metodo de pago
</div>
<form action = '@Url.Action("GuardarPedido","Home")'>
